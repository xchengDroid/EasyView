<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">

    <declare-styleable name="TopBarLayout">
        <attr name="ev_topBarLayout" format="reference" />
        <!--居中标题-->
        <attr name="ev_topBarTitle" format="string" />
    </declare-styleable>

    <declare-styleable name="DividerView">
        <attr name="ev_position">
            <flag name="none" value="0x00" />
            <flag name="top" value="0x1" />
            <flag name="bottom" value="0x2" />
        </attr>
        <attr name="ev_topHeight" format="dimension" />
        <attr name="ev_topColor" format="color" />
        <attr name="ev_topToLeft" format="dimension" />
        <attr name="ev_topToRight" format="dimension" />
        <attr name="ev_bottomHeight" format="dimension" />
        <attr name="ev_bottomColor" format="color" />
        <attr name="ev_bottomToLeft" format="dimension" />
        <attr name="ev_bottomToRight" format="dimension" />
    </declare-styleable>
    <!--end-->
    <declare-styleable name="DividerContainer">
        <attr name="ev_position" />
        <attr name="ev_topHeight" />
        <attr name="ev_topColor" />
        <attr name="ev_topToLeft" />
        <attr name="ev_topToRight" />
        <attr name="ev_bottomHeight" />
        <attr name="ev_bottomColor" />
        <attr name="ev_bottomToLeft" />
        <attr name="ev_bottomToRight" />
    </declare-styleable>
    <!--end-->
    <declare-styleable name="DividerLayout">
        <attr name="ev_position" />
        <attr name="ev_topHeight" />
        <attr name="ev_topColor" />
        <attr name="ev_topToLeft" />
        <attr name="ev_topToRight" />
        <attr name="ev_bottomHeight" />
        <attr name="ev_bottomColor" />
        <attr name="ev_bottomToLeft" />
        <attr name="ev_bottomToRight" />
    </declare-styleable>
    <declare-styleable name="DividerTextView">
        <attr name="ev_position" />
        <attr name="ev_topHeight" />
        <attr name="ev_topColor" />
        <attr name="ev_topToLeft" />
        <attr name="ev_topToRight" />
        <attr name="ev_bottomHeight" />
        <attr name="ev_bottomColor" />
        <attr name="ev_bottomToLeft" />
        <attr name="ev_bottomToRight" />
    </declare-styleable>

    <declare-styleable name="CommonView">
        <attr name="ev_cv_label" format="string" />
        <attr name="ev_cv_labelColor" format="color" />
        <attr name="ev_cv_labelSize" format="dimension" />
        <attr name="ev_cv_labelWidth" format="dimension" />
        <!--前后缀如*：等-->
        <attr name="ev_cv_labelPrefix" format="string" />
        <attr name="ev_cv_labelSuffix" format="string" />

        <!--displayText 和 inputText的样式-->
        <attr name="ev_cv_text" format="string" />
        <attr name="ev_cv_hint" format="string" />
        <attr name="ev_cv_textSize" format="dimension" />
        <attr name="ev_cv_textColor" format="color" />
        <attr name="ev_cv_hintColor" format="color" />
        <attr name="ev_cv_maxLength" format="integer" />
        <attr name="ev_cv_minHeight" format="dimension" />
        <attr name="ev_cv_singleLine" format="boolean" />
        <!--内容部分的上下padding,这个作用是增大EditText的显示区域和当字体在不通scaledDensity上大小不同均能保持一定的上下间距-->
        <attr name="ev_cv_paddingTop" format="dimension" />
        <attr name="ev_cv_paddingBottom" format="dimension" />
        <attr name="ev_cv_paddingStart" format="dimension" />
        <attr name="ev_cv_paddingEnd" format="dimension" />

        <!--内容显示位置 左侧还是右侧-->
        <attr name="ev_cv_gravity">
            <enum name="start" value="0" />
            <enum name="center" value="1" />
            <enum name="end" value="2" />
        </attr>

        <attr name="ev_cv_suffixText" format="string" />
        <attr name="ev_cv_suffixTextColor" format="color" />
        <attr name="ev_cv_suffixTextSize" format="dimension" />
        <attr name="ev_cv_suffixIcon" format="reference" />

        <!--自定义的布局文件，id和控件必须保和ev_common_view持一致-->
        <attr name="ev_cv_layout" format="reference" />

        <attr name="ev_cv_inputType">//输入的内容限制
            <enum name="none" value="0" />
            <enum name="number" value="1" />
            <enum name="numberDecimal" value="2" />
            <enum name="textPassword" value="3" />
            <enum name="numberPassword" value="4" />
            <enum name="phone" value="5" />
        </attr>
        <attr name="ev_cv_mode">
            <enum name="input" value="0" />//输入
            <enum name="display" value="1" />//view用于查看选择数据
        </attr>
    </declare-styleable>

    <declare-styleable name="SmartTabLayout">
        <attr name="stl_indicatorAlwaysInCenter" format="boolean" />
        <attr name="stl_indicatorWithoutPadding" format="boolean" />
        <attr name="stl_indicatorInFront" format="boolean" />
        <attr name="stl_indicatorInterpolation" format="enum">
            <enum name="smart" value="0" />
            <enum name="linear" value="1" />
        </attr>
        <attr name="stl_indicatorGravity" format="enum">
            <enum name="bottom" value="0" />
            <enum name="top" value="1" />
            <enum name="center" value="2" />
        </attr>
        <attr name="stl_indicatorColor" format="color" />
        <attr name="stl_indicatorColors" format="reference" />
        <attr name="stl_indicatorThickness" format="dimension" />
        <attr name="stl_indicatorWidth" format="dimension">
            <enum name="auto" value="-1" />
        </attr>
        <attr name="stl_indicatorCornerRadius" format="dimension" />
        <attr name="stl_overlineColor" format="color" />
        <attr name="stl_overlineThickness" format="dimension" />
        <attr name="stl_underlineColor" format="color" />
        <attr name="stl_underlineThickness" format="dimension" />
        <attr name="stl_dividerColor" format="color" />
        <attr name="stl_dividerColors" format="reference" />
        <attr name="stl_dividerThickness" format="dimension" />
        <attr name="stl_defaultTabBackground" format="reference" />
        <attr name="stl_defaultTabTextAllCaps" format="boolean" />
        <attr name="stl_defaultTabTextColor" format="color|reference" />
        <attr name="stl_defaultTabTextSize" format="dimension" />
        <attr name="stl_defaultTabTextHorizontalPadding" format="dimension" />
        <attr name="stl_defaultTabTextMinWidth" format="dimension" />
        <attr name="stl_customTabTextLayoutId" format="reference" />
        <attr name="stl_customTabTextViewId" format="reference" />
        <attr name="stl_distributeEvenly" format="boolean" />
        <attr name="stl_clickable" format="boolean" />
        <attr name="stl_titleOffset" format="dimension">
            <enum name="auto_center" value="-1" />
        </attr>
        <attr name="stl_drawDecorationAfterTab" format="boolean" />
    </declare-styleable>

    <!--圆角实现开始===================================================-->
    <!--默认主题中的样式-->
    <!--<attr name="EVRoundButtonStyle" format="reference" />-->

    <attr name="ev_fillColor" format="color" />
    <attr name="ev_fillColorPressed" format="color" />
    <attr name="ev_fillColorDisable" format="color" />

    <attr name="ev_borderColor" format="color" />
    <attr name="ev_borderColorPressed" format="color" />
    <attr name="ev_borderColorDisable" format="color" />

    <attr name="ev_borderWidth" format="dimension" />
    <!-- 圆角是否要自适应为 View 高度的一半 -->
    <attr name="ev_isRadiusAdjustBounds" format="boolean" />
    <!-- 是否有按下状态 -->
    <attr name="ev_hasState" format="boolean" />

    <!-- 同时指定四个方向的圆角大小 -->
    <attr name="ev_radius" format="dimension" />
    <!-- 指定左上方圆角的大小 -->
    <attr name="ev_radiusTopLeft" format="dimension" />
    <!-- 指定右上方圆角的大小 -->
    <attr name="ev_radiusTopRight" format="dimension" />
    <!-- 指定左下方圆角的大小 -->
    <attr name="ev_radiusBottomLeft" format="dimension" />
    <!-- 指定右下方圆角的大小 -->
    <attr name="ev_radiusBottomRight" format="dimension" />

    <declare-styleable name="RoundButton">
        <attr name="ev_fillColor" />
        <attr name="ev_fillColorPressed" />
        <attr name="ev_fillColorDisable" />
        <attr name="ev_borderColor" />
        <attr name="ev_borderColorPressed" />
        <attr name="ev_borderColorDisable" />
        <attr name="ev_borderWidth" />
        <attr name="ev_isRadiusAdjustBounds" />
        <attr name="ev_hasState" />
        <attr name="ev_radius" />
        <attr name="ev_radiusTopLeft" />
        <attr name="ev_radiusTopRight" />
        <attr name="ev_radiusBottomLeft" />
        <attr name="ev_radiusBottomRight" />
    </declare-styleable>
    <declare-styleable name="RoundTextView">
        <attr name="ev_fillColor" />
        <attr name="ev_fillColorPressed" />
        <attr name="ev_fillColorDisable" />
        <attr name="ev_borderColor" />
        <attr name="ev_borderColorPressed" />
        <attr name="ev_borderColorDisable" />
        <attr name="ev_borderWidth" />
        <attr name="ev_isRadiusAdjustBounds" />
        <attr name="ev_hasState" />
        <attr name="ev_radius" />
        <attr name="ev_radiusTopLeft" />
        <attr name="ev_radiusTopRight" />
        <attr name="ev_radiusBottomLeft" />
        <attr name="ev_radiusBottomRight" />
    </declare-styleable>
    <declare-styleable name="RoundEditText">
        <attr name="ev_fillColor" />
        <attr name="ev_fillColorPressed" />
        <attr name="ev_fillColorDisable" />
        <attr name="ev_borderColor" />
        <attr name="ev_borderColorPressed" />
        <attr name="ev_borderColorDisable" />
        <attr name="ev_borderWidth" />
        <attr name="ev_isRadiusAdjustBounds" />
        <attr name="ev_hasState" />
        <attr name="ev_radius" />
        <attr name="ev_radiusTopLeft" />
        <attr name="ev_radiusTopRight" />
        <attr name="ev_radiusBottomLeft" />
        <attr name="ev_radiusBottomRight" />
    </declare-styleable>
    <declare-styleable name="RoundFrameLayout">
        <attr name="ev_fillColor" />
        <attr name="ev_fillColorPressed" />
        <attr name="ev_fillColorDisable" />
        <attr name="ev_borderColor" />
        <attr name="ev_borderColorPressed" />
        <attr name="ev_borderColorDisable" />
        <attr name="ev_borderWidth" />
        <attr name="ev_isRadiusAdjustBounds" />
        <attr name="ev_hasState" />
        <attr name="ev_radius" />
        <attr name="ev_radiusTopLeft" />
        <attr name="ev_radiusTopRight" />
        <attr name="ev_radiusBottomLeft" />
        <attr name="ev_radiusBottomRight" />
    </declare-styleable>
    <declare-styleable name="RoundLinearLayout">
        <attr name="ev_fillColor" />
        <attr name="ev_fillColorPressed" />
        <attr name="ev_fillColorDisable" />
        <attr name="ev_borderColor" />
        <attr name="ev_borderColorPressed" />
        <attr name="ev_borderColorDisable" />
        <attr name="ev_borderWidth" />
        <attr name="ev_isRadiusAdjustBounds" />
        <attr name="ev_hasState" />
        <attr name="ev_radius" />
        <attr name="ev_radiusTopLeft" />
        <attr name="ev_radiusTopRight" />
        <attr name="ev_radiusBottomLeft" />
        <attr name="ev_radiusBottomRight" />
    </declare-styleable>
    <declare-styleable name="RoundRelativeLayout">
        <attr name="ev_fillColor" />
        <attr name="ev_fillColorPressed" />
        <attr name="ev_fillColorDisable" />
        <attr name="ev_borderColor" />
        <attr name="ev_borderColorPressed" />
        <attr name="ev_borderColorDisable" />
        <attr name="ev_borderWidth" />
        <attr name="ev_isRadiusAdjustBounds" />
        <attr name="ev_hasState" />
        <attr name="ev_radius" />
        <attr name="ev_radiusTopLeft" />
        <attr name="ev_radiusTopRight" />
        <attr name="ev_radiusBottomLeft" />
        <attr name="ev_radiusBottomRight" />
    </declare-styleable>
    <!--圆角实现结束===================================================-->
    <!--************ Loading ***********-->
    <declare-styleable name="LoadingView">
        <attr name="ev_loading_view_size" format="dimension" />
        <attr name="android:color" />
    </declare-styleable>
    <!-- QMUIProgressBar start -->
    <declare-styleable name="ProgressView">
        <attr name="ev_type" format="enum">
            <enum name="rect" value="0" />
            <enum name="circle" value="1" />
        </attr>
        <attr name="ev_progress_color" format="color" />
        <attr name="ev_background_color" format="color" />
        <attr name="ev_max_value" format="integer" />
        <attr name="ev_value" format="integer" />
        <attr name="ev_stroke_width" format="dimension" />
        <attr name="ev_stroke_round_cap" format="boolean" />
        <attr name="android:textSize" />
        <attr name="android:textColor" />
    </declare-styleable>
    <declare-styleable name="CheckView">
        <attr name="android:checked" />
        <attr name="ev_type" />
        <attr name="ev_strokeColor" format="color" />
        <attr name="ev_bgColor" format="color" />
        <attr name="ev_checkedColor" format="color" />
        <attr name="ev_size" format="dimension" />
        <attr name="ev_strokeWidth" format="dimension" />
    </declare-styleable>
</resources>
