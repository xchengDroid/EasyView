<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <com.xcheng.view.widget.smarttab.SmartTabLayout
        android:id="@+id/ev_id_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3C515C"
        app:stl_defaultTabTextColor="@color/ev_white"
        app:stl_defaultTabTextHorizontalPadding="24dp"
        app:stl_indicatorColor="#40C4FF"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorThickness="3dp"
        app:stl_titleOffset="auto_center"
        app:stl_indicatorAlwaysInCenter="true"
        app:stl_underlineThickness="1dp" />

    <android.support.v4.view.ViewPager
        android:id="@id/ev_id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>